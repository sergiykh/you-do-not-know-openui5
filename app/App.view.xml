<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
  width="100%"
  height="100%"        
  controllerName="app.App">

  <!-- 1 Try set custom event function (code of function App.controller.js) for child component in settings.customEvent. -->
    <core:ComponentContainer
      width="100%"
      height="100%"
      name="app.component.custom"
      propagateModel="true"
      componentCreated=".onComponentCreated"
      settings='\{
        "customProperty": "customPropertyValue",
        "customEvent": "customEventFunction"
      \}'/>
  
